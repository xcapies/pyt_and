<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".SignUp">
    <ProgressBar
        android:id="@+id/signup_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="top"
        android:progressBackgroundTint="#278A0C"
        android:backgroundTintMode="src_over"
        android:indeterminate="true"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/welcome_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Profile Form"
            android:textAlignment="center"
            android:textColor="#90070707"
            android:textSize="40sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        android:weightSum="1">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:background="#52A2B3E6"
            android:hint="First Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/in_prof_fName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                 />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#52A2B3E6"
            android:hint="Last Name"
            android:padding="1dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/in_prof_lName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/in_prof_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#52A2B3E6"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/in_prof_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#52A2B3E6"
                android:hint="Phone/Tel Number"
                android:maxLines="1"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#52A2B3E6"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="1dp"
            app:passwordToggleEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/in_prof_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#52A2B3E6"
            android:hint="Repeat the password"
            android:inputType="textPassword"
            android:padding="1dp"
            app:passwordToggleEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/in_prof_password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                 />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/in_prof_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#00000000"
            android:padding="10dp"
            android:text="Save"
            android:textColor="#075705"
            android:textSize="25sp"
            app:rippleColor="#424242" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/in_prof_clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#00000000"
            android:padding="10dp"
            android:text="Clear"
            android:textColor="#075705"
            android:textSize="25sp"
            app:rippleColor="#424242" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/in_prof_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#00000000"
            android:padding="10dp"
            android:text="Back"
            android:textColor="#075705"
            android:textSize="25sp"
            app:rippleColor="#424242" />
    </LinearLayout>



</LinearLayout>